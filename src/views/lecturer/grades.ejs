                    <label for="edt-student-number">Student number</label>
                    <input type="number" id="edt-student-number" class="input-wrapper__input" placeholder="21830566" disabled>
                </div>
                <div class="input-wrapper">
                    <label for="edt-test-name">Test name</label>
                    <input type="text" id="edt-test-name" class="input-wrapper__input" placeholder="e.g. 50" disabled>
                </div>
            </div>
            <div class="twin-inputs flex flex--j-space-between">
                <div class="input-wrapper">
                    <label for="edt-test-grade">Test grade</label>
                    <input type="number" id="edt-test-grade" class="input-wrapper__input" placeholder="e.g. 50">
                </div>
            </div>
        </div>
        <div class="modal__main__footer flex">
            <button class="btn btn--primary" id="update-grade-btn">Edit grade</button>
        </div>
    </form>
</div>

