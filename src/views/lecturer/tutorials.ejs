<div class="page-container">
    <%- include('../partials/sidenav/lecturer') %>

    <div class="page-container__main page-container__main--nav-closed">
        <%- include('../partials/header/lecturer') %>

        <div class="page-container__main__padded">
            <div class="page-container__main__padded__page-title">
                <h1>Tutorials</h1>
            </div>
            <div class="card table">
                <div class="card__header card__header--no-border card__header--search">
                    <input type="text" id="tutorials-search-box"  placeholder="Search tutorials by description">
                </div>
                <div class="table__header">
                    <ul class="table__header__row">
                        <li class="table__header__row__item short">#</li>
                        <li class="table__header__row__item">Module</li>
                        <li class="table__header__row__item">Description</li>
                        <li class="table__header__row__item">Link</li>
                        <li class="table__header__row__item last-cell">Added on</li>
                    </ul>
                </div>
                <div class="table__body" id="student-tutorials"></div>
                <div class="card__body" id="no-student-tutorials" style="display: none;">
                    <div class="empty">
                        <h4>No student tutorials</h4>
                        <p>You have not added any tutorials yet :)</p>
                    </div>
                </div>
            </div>
            <button class="btn btn--primary open-modal" style="margin-top: 2rem;" data-modal="new-tutorial">New tutorial</button>
        </div>
    </div>
</div>

<div class="modal modal--closed flex--a-start flex--j-center" id="new-tutorial-modal">
    <form class="modal__main" id="new-tutorial-form">
        <div class="modal__main__header flex flex--a-center flex--j-space-between">
            <div>
                <h1>New tutorial.</h1>
            </div>
            <svg class="icon svg close-modal" data-modal="new-tutorial">
                <use href="#cross"></use>
            </svg>
        </div>
        <div class="error-container error-container--pad" id="new-tutorial-error">
            <p class="error-container__p">
                <span class="error-container__p__exclamation">Oops.</span>
                <span class="error-container__p__text"></span>
            </p>
        </div>
        <div class="modal__main__body modal__main__body--short" style="padding: 1.4rem 2rem;">
            <div class="input-wrapper">
                <label for="tutorial-link">Tutorial link</label>
                <input type="text" id="tutorial-link" class="input-wrapper__input" placeholder="e.g. https://website.com?video=wertyuio">
            </div>
            <div class="input-wrapper" style="margin-top: 1.6rem;">
                <label for="tutorial-description">Tutorial description</label>
                <textarea id="tutorial-description" class="input-wrapper__input"></textarea>
            </div>
            <div class="modules" style="margin-top: 1.6rem;">
                <div class="input-wrapper" id="module-item-1">
                    <label for="tutorial-module" id="tutorial-module-label">Module</label>
                    <div class="flex flex--a-center">
                        <select id="tutorial-module" class="input-wrapper__input modules__item" style="flex: 1;">
                            <option value="select">Select</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal__main__footer flex">
            <button class="btn btn--primary" id="update-grade-btn">Add tutorial</button>
        </div>
    </form>
</div>

<script>
    const targetPage = 'lecturer-tutorials';
</script>

<script src="/assets/js/dist/lib/jquery/jquery.js"></script>
<script src="/assets/js/dist/app.bundle.js"></script>